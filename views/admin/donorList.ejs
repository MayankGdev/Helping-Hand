<%- include('../include/dashboard-head', {active:active,pageTitle: pageTitle, adminInfo: adminInfo}); -%>

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12" style="width: 60%;">
                <div class=" card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Donors</h4>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                    <th> fname </th>
                                    <th> lname </th>
                                    <th> email </th>
                                    <th> phone </th>
                                    <th> Action </th>
                                </thead>
                                <% if(donors.length!=0){donors.forEach(donor=>{%>
                                <tbody>
                                    <tr>
                                        <td> <%=donor.fname%> </td>
                                        <td> <%=donor.lname%> </td>
                                        <td> <%=donor.email%> </td>
                                        <td> <%=donor.phoneno%> </td>
                                        <td> <a href="/admin_donor/<%=donor._id%>"><i class="fa fa-eye"
                                                    aria-hidden="true"></i></a> </td>
                                    </tr>
                                </tbody>
                                <%});}else{%>
                                <h4>no records found</h4>
                                <%}%>
                </table>
              </div>
            </div>
          </div>
        </div>



<%- include('../include/dashboard-footer'); -%>